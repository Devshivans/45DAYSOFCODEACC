#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	
	while(t--) {
	    int a, x, y, z;
	    cin>>a>>x>>y>>z;
	    
	    if (a < x+y+z) {
	        if (a>=y+z || a>=x+z) cout<<1;
	        else cout<<2;
	    }
	    else cout<<0;
	    cout<<endl;
	}
	return 0;
